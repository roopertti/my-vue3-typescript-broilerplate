{
  "name": "my-vue3-typescript-broilerplate",
  "version": "0.0.0",
  "description": "Vue 3 boilerplate project with TypeScript, TailwindCSS, ESLint and Prettier",
  "author": {
    "name": "Robert Kuhlmann"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore --fix src",
    "format": "prettier . --write",
    "cypress:open": "cypress open"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "vue": "^3.2.16",
    "vue-query": "^1.13.0",
    "vue-router": "4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.3",
    "autoprefixer": "^10.4.0",
    "cypress": "^9.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.0.3",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4",
    "vite": "^2.6.4",
    "vue-eslint-parser": "^8.0.1",
    "vue-tsc": "^0.3.0"
  }
}
