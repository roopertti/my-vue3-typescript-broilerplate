{
  "name": "my-vue3-typescript-broilerplate",
  "version": "0.0.0",
  "description": "Vue 3 boilerplate project with TypeScript, TailwindCSS, ESLint and Prettier",
  "author": {
    "name": "Robert Kuhlmann"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit --skipLibCheck && vite build --mode production",
    "serve": "vite preview",
    "lint": "eslint --ext .ts,.vue --ignore-path .gitignore --fix src",
    "format": "prettier . --write",
    "cypress:open": "cypress open",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "vue": "^3.2.47",
    "vue-query": "^1.26.0",
    "vue-router": "4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-c8": "^0.29.2",
    "@vue/test-utils": "^2.3.1",
    "autoprefixer": "^10.4.14",
    "cypress": "^12.8.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.9.0",
    "jsdom": "^21.1.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2",
    "vue-eslint-parser": "^9.1.0",
    "vue-tsc": "^1.2.0",
    "husky": "^8.0.0"
  }
}
